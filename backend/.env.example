PORT=5000
NODE_ENV=development

# Firebase Admin Key (obtenha em Firebase Console > Project Settings > Service Accounts)
# Opção 1: Usar arquivo JSON (recomendado para desenvolvimento local)
GOOGLE_APPLICATION_CREDENTIALS=./firebase-key.json

# Opção 2: Usar chave em Base64 (recomendado para produção)
FIREBASE_ADMIN_KEY_BASE64=

# Configurações CORS (deve corresponder à URL do frontend)
CORS_ORIGIN=http://localhost:5173

# JWT Secret (Gere uma string aleatória segura)
JWT_SECRET=sua_chave_secreta_super_segura_aqui_123456789
JWT_EXPIRES_IN=7d

GOOGLE_APPLICATION_CREDENTIALS=

# Config do Firebase Client (frontend)
FIREBASE_API_KEY=
FIREBASE_AUTH_DOMAIN=
FIREBASE_PROJECT_ID=
FIREBASE_STORAGE_BUCKET=
FIREBASE_MESSAGING_SENDER_ID=
FIREBASE_APP_ID=

NODE_ENV=development
